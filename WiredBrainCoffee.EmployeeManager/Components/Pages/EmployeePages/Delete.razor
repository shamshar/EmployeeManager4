@page "/employees/delete"
@using WiredBrainCoffee.EmployeeManager.Models
@using WiredBrainCoffee.EmployeeManager.Services
@inject IEmployeeService EmployeeService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Delete Employee</PageTitle>

<h1>Delete Employee</h1>

<h3>Are you sure you want to delete this?</h3>

@if (employee is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@employee.FirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@employee.LastName</dd>

        <dt class="col-sm-2">Is Developer</dt>
        <dd class="col-sm-10">@((employee.IsDeveloper) ? "Yes" : "No")</dd>

        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@employee.DepartmentName</dd>
    </dl>

    <EditForm Model="employee" OnValidSubmit="DeleteEmployee" FormName="deleteEmployeeForm">
        <button type="submit" class="btn btn-danger" disabled="@(employee is null)">Delete</button>
        <a class="btn btn-secondary ms-2" href="/employees">Back to List</a>
    </EditForm>

}

@code {
    [SupplyParameterFromQuery]
    public int Id { get; set; }

    EmployeeDto? employee;

    protected override async Task OnInitializedAsync()
    {
        employee = await EmployeeService.GetByIdAsync(Id);

        if (employee is null)
        {
            NavigationManager.NavigateTo("/notfound");
        }
    }

    async Task DeleteEmployee()
    {
        if (employee is null) return;

        await EmployeeService.DeleteAsync(employee.Id);
        NavigationManager.NavigateTo("/employees");
    }
}
